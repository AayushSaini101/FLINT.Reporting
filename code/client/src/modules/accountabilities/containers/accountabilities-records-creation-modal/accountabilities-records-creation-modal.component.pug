sb-modal
  ng-container(title='')
    | Create Administrative Hierarchy Level Members Records
  ng-container(body='')
    sb-accountabilities-records-creation([accountabilityruleid]='accountabilityRuleId', [previouslyselectedpartiesids]='previouslySelectedPartiesIds', (loadednext)='onLoadedNext()', (loadedprevious)='onLoadedPrevious()', (succeeded)='onSucceeded()', (failed)='onFailed($event)')
    ng-container(*ngif='(status$ | async) === "saving"')
      sb-message-overlay(activity='creating', status='saving')
    ng-container(*ngif='(status$ | async) === "succeeded"')
      sb-message-overlay(activity='creating', status='done')
    ng-container(*ngif='(status$ | async) === "failed"')
      sb-message-overlay(activity='creating', status='failed')
    ng-container(*ngif='(status$ | async) === "retrying"')
      sb-countdown-overlay(crosshead='Retrying in ', (completed)='onSave()')
  ng-container(footer='')
    ng-container(*ngif='(status$ | async) === "nextable"')
      sb-button(action='next', (next)='onNext()')
    ng-container(*ngif='(status$ | async) === "saveable"')
      sb-button(action='previous', (previous)='onPrevious()')
      sb-button(action='save', entity='Accountability', (save)='onSave()')
    ng-container(*ngif='(status$ | async) === "saving"')
      sb-button(action='save', entity='Accountability', disabled='true')
    ng-container(*ngif='(status$ | async) === "invalid"')
      sb-button(action='previous', (previous)='onPrevious()')
      sb-button(action='save', entity='Accountability', (save)='onSave()')
    ng-container(*ngif='(status$ | async) === "succeeded"')
      sb-button(action='yes', entity='Accountability', guarded='false', (yes)='onContinue()')
      sb-button(action='no', entity='Accountability', guarded='false', (no)='onQuit()')
    ng-container(*ngif='(status$ | async) === "failed"')
      sb-button(action='yes', entity='Accountability', (yes)='onRetry()')
      sb-button(action='no', entity='Accountability', guarded='false', (no)='onQuit()')
    ng-container(*ngif='(status$ | async) === "retrying"')
      sb-button(action='yes', entity='Accountability', disabled='true')
      sb-button(action='no', entity='Accountability', disabled='true')
