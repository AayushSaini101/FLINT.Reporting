sb-modal
  ng-container(title='')
    | Create {{targetReportingFramework.name}} Reporting Table Record
  ng-container(body='')
    sb-reporting-tables-records-creation([targetreportingframework]='targetReportingFramework', (initialized)='onInitialized()', (succeeded)='onSucceeded()', (failed)='onFailed($event)')
    ng-container(*ngif='(status$ | async) === "initializing"')
      sb-message-overlay(activity='creating', status='initializing')
    ng-container(*ngif='(status$ | async) === "saving"')
      sb-message-overlay(activity='creating', status='saving')
    ng-container(*ngif='(status$ | async) === "succeeded"')
      sb-message-overlay(activity='creating', status='succeeded')
    ng-container(*ngif='(status$ | async) === "failed"')
      sb-message-overlay(activity='creating', status='failed')
    ng-container(*ngif='(status$ | async) === "retrying"')
      sb-countdown-overlay(crosshead='Retrying in ', (completed)='onSave()')
  ng-container(footer='')
    ng-container(*ngif='(status$ | async) === "ready"')
      sb-button(action='save', entity='ReportingTable', (save)='onSave()')
    ng-container(*ngif='(status$ | async) === "saving"')
      sb-button(action='save', entity='ReportingTable', disabled='true')
    ng-container(*ngif='(status$ | async) === "invalid"')
      sb-button(action='save', entity='ReportingTable', (save)='onSave()')
    ng-container(*ngif='(status$ | async) === "succeeded"')
      sb-button(action='yes', entity='ReportingTable', guarded='false', (yes)='onContinue()')
      sb-button(action='no', entity='ReportingTable', guarded='false', (no)='onQuit()')
    ng-container(*ngif='(status$ | async) === "failed"')
      sb-button(action='yes', entity='ReportingTable', (yes)='onRetry()')
      sb-button(action='no', entity='ReportingTable', guarded='false', (no)='onQuit()')
    ng-container(*ngif='(status$ | async) === "retrying"')
      sb-button(action='yes', entity='ReportingTable', disabled='true')
      sb-button(action='no', entity='ReportingTable', disabled='true')
