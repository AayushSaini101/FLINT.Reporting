form
  .row
    .col
      .d-flex.justify-content-between.p-2
        sb-search((searched)='onSearch($event)')
        sb-loading-animation
  .row
    .col
      sb-table
        ng-container(header)
          tr
            th.text-center.align-middle(scope='col')
              span #
            th.align-middle(scope='col', sbsortable='code', (sort)='onSort($event)')
              span Code
              sb-sort-icon(*ngif='sortedColumn === "code"', [direction]='sortedDirection')
            th.align-middle(scope='col')
              span Description
            th.align-middle(scope='col')
              span.d-flex.flex-row-reverse
                | Actions
        ng-container(footer='')
          tr
            td.align-middle(scope='col', colspan='4')
              span.d-flex.flex-row-reverse
                sb-button(action='add', entity='CoverType', (add)='onAddCoverType()')
        ng-container(body')
          tr(*ngfor='let coverType of coverTypesTableService.coverTypes$ | async')
            td.text-center.align-middle
              | {{coverType.pos}}
            td.align-middle
              ngb-highlight([result]='coverType.code', [term]='coverTypesTableService.searchTerm')
            td.align-middle
              ngb-highlight([result]='coverType.description', [term]='coverTypesTableService.searchTerm')
            td.align-middle
              span.d-flex.flex-row-reverse
                sb-button(action='delete', entity='CoverType', id='{{coverType.id}}', (delete)='onDeleteCoverType($event)')
                sb-button(action='update', entity='CoverType', id='{{coverType.id}}', (update)='onUpdateCoverType($event)')
  .row
    .col
      sb-pagination((pagechanged)='onPageChange($event)', (pagesizechanged)='onPageSizeChange($event)')
