form
  .row
    .col
      .d-flex.justify-content-between.p-2
        sb-search((searched)='onSearch($event)')
        sb-loading-animation
  // For Small-Sized Devices Only
  .row.d-md-none
    .col
      sb-table
        ng-container(header='')
          tr
            th.col-sm-1.text-center.align-middle(scope='col')
              span #
            th.col-sm-8.text-left.align-middle(scope='col', sbsortable='name', (sort)='onSort($event)')
              span Name
              sb-sort-icon(*ngif='sortedColumn === "name"', [direction]='sortedDirection')
            th.col-sm-1.text-left.align-middle(scope='col', sbsortable='abbreviation', (sort)='onSort($event)')
              span Abbreviation
              sb-sort-icon(*ngif='sortedColumn === "abbreviation"', [direction]='sortedDirection')
            th.col-sm-2.text-center.align-middle(scope='col')
              span.d-flex.flex-row-reverse
                | Actions
        ng-container(body='')
          tr(*ngfor='let emissionType of emissionsTypesRecordsTabulationService.emissionsTypes$ | async')
            td.text-center.align-middle
              | {{emissionType.pos}}
            td.text-left.align-middle
              ngb-highlight([result]='emissionType.name', [term]='emissionsTypesRecordsTabulationService.searchTerm')
            td.text-left.align-middle
              ngb-highlight([result]='emissionType.abbreviation', [term]='emissionsTypesRecordsTabulationService.searchTerm')
            td.text-center.align-middle
              span.d-flex.flex-row-reverse
                sb-button(action='delete', entity='Emission Type', id='{{emissionType.id}}', (delete)='onDeleteEmissionType($event)', tooltip='Delete {{emissionType.name}}')
                sb-button(action='update', entity='Emission Type', id='{{emissionType.id}}', (update)='onUpdateEmissionType($event)', tooltip='Update {{emissionType.name}}')
        ng-container(footer='')
          tr
            td.align-middle(scope='col', colspan='6')
              span.d-flex.flex-row.flex-row-reverse
                sb-button(action='add', entity='Emission Type', (add)='onAddEmissionType()')
  // For Middle-Sized Devices Upwards
  .row.d-none.d-md-block
    .col
      sb-table
        ng-container(header='')
          tr
            th.col-md-1.text-center.align-middle(scope='col')
              span #
            th.col-md-3.text-left.align-middle(scope='col', sbsortable='name', (sort)='onSort($event)')
              span Name
              sb-sort-icon(*ngif='sortedColumn === "name"', [direction]='sortedDirection')
            th.col-md-1.text-left.align-middle(scope='col', sbsortable='abbreviation', (sort)='onSort($event)')
              span Abbreviation
              sb-sort-icon(*ngif='sortedColumn === "abbreviation"', [direction]='sortedDirection')
            th.col-md-6.text-left.align-middle(scope='col', sbsortable='description', (sort)='onSort($event)')
              span Description
              sb-sort-icon(*ngif='sortedColumn === "description"', [direction]='sortedDirection')
            th.col-md-1.text-center.align-middle(scope='col')
              span.d-flex.flex-row-reverse
                | Actions
        ng-container(body='')
          tr(*ngfor='let emissionType of emissionsTypesRecordsTabulationService.emissionsTypes$ | async')
            td.text-center.align-middle
              | {{emissionType.pos}}
            td.text-left.align-middle
              ngb-highlight([result]='emissionType.name', [term]='emissionsTypesRecordsTabulationService.searchTerm')
            td.text-left.align-middle
              ngb-highlight([result]='emissionType.abbreviation', [term]='emissionsTypesRecordsTabulationService.searchTerm')
            td.text-left.align-middle
              ngb-highlight([result]='emissionType.description', [term]='emissionsTypesRecordsTabulationService.searchTerm')
            td.text-center.align-middle
              span.d-flex.flex-row-reverse
                sb-button(action='delete', entity='Emission Type', id='{{emissionType.id}}', (delete)='onDeleteEmissionType($event)', tooltip='Delete {{emissionType.name}}')
                sb-button(action='update', entity='Emission Type', id='{{emissionType.id}}', (update)='onUpdateEmissionType($event)', tooltip='Update {{emissionType.name}}')
        ng-container(footer='')
          tr
            td.align-middle(scope='col', colspan='6')
              span.d-flex.flex-row.flex-row-reverse
                sb-button(action='add', entity='Emission Type', (add)='onAddEmissionType()')
  .row
    .col
      sb-pagination((pagechanged)='onPageChange($event)', (pagesizechanged)='onPageSizeChange($event)')
